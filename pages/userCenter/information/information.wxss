page {
  background: #fff;
}

#information .informationBox {
  margin-top: 53rpx;
  padding: 0 30rpx;
}

#information .informationBox text {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #171A25;
}

#information .informationBox .loginTel {
  line-height: 105rpx;
  border-bottom: 2rpx solid #E3E4EA;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

#information .informationBox .realnamebutton {
  line-height: 105rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

#information .informationBox .realnamebutton .renzhen {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #2576F8;
  margin-right: 18rpx;
}

#information .informationBox .realnamebutton .realicon {
  background: url(data:image/png;base64,) no-repeat;
  background-size: cover;
  width: 12rpx;
  height: 22rpx;
  display: inline-block;
}
