page {
  background-image: linear-gradient(to right, #3f0fed, #401eee);
  position: relative;
  overflow-y: hidden;
  height: 100vh;
}

page canvas {
  margin-top: calc((100vh - 1624rpx)/2);
  height: calc(1624rpx - ((1624rpx - 100vh)/2));
  width: 100vw;
}

.button {
  text-align: center;
  position: absolute;
  top: calc(1624rpx - 100vh + 940rpx);
  left: 0;
  right: 0;
  margin: auto;
  width: 544rpx;
  height: 92rpx;
  line-height: 92rpx;
  color: white;
  background: #FB8E33;
  box-shadow: 0 6px 14px 0 rgba(225, 47, 10, 0.34);
  border-radius: 100px;
}

.cover-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
}

.layout-fixed-bottom {
  width: 100vw;
  bottom: 0;
  position: fixed;
  left: 0;
  background: white;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}

.layout-fixed-bottom .layout-ul {
  display: flex;
  height: 232rpx;
  border-bottom: 1px solid #C9CDD7;
  width: 100vw;
}

.layout-fixed-bottom .layout-li {
  background: white;
  flex: 1;
  padding: 25rpx 0;
}

.layout-fixed-bottom .layout-li .icon-image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

.layout-fixed-bottom .layout-li .row {
  padding: 5rpx 0;
  text-align: center;
  width: 100%;
  font-size: 28rpx;
  color: #80888C;
  line-height: 50rpx;
}

.layout-fixed-bottom .btn-cancel {
  width: 100%;
  line-height: 100rpx;
  height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  z-index: 10000000000;
}
